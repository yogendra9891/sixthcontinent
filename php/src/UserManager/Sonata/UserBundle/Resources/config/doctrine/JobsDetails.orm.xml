<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="UserManager\Sonata\UserBundle\Entity\JobsDetailsRepository" name="UserManager\Sonata\UserBundle\Entity\JobsDetails">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="userId" type="bigint" column="user_id"/>
    <field name="companyName" type="string" column="company_name" length="255"/>
    <field name="title" type="string" column="title" length="255"/>
    <field name="location" type="string" column="location" length="500"/>
    <field name="startDate" type="date" column="start_date"/>
    <field name="endDate" type="date" column="end_date"/>
    <field name="currentlyWorking" type="boolean" column="currently_working"/>
    <field name="headline" type="string" column="headline" length="255"/>
    <field name="description" type="text" column="description"/>
    <field name="visibility" type="smallint" column="visibility"/>
    <field name="createdAt" type="datetime" column="created_at"/>
    <field name="updatedAt" type="datetime" column="updated_at"/>
  </entity>
</doctrine-mapping>
